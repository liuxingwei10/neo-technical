# Maintainer: Alec Ari <neotheuser@ymail.com>

pkgname=qemu
pkgver=0.14.0
pkgrel=1
pkgdesc="QEMU is a generic and open source processor emulator which achieves a good emulation speed by using dynamic translation."
arch=('i686' 'x86_64')
license=('GPL')
url="http://wiki.qemu.org/Main_Page"
source=(http://download.savannah.gnu.org/releases/qemu/$pkgname-$pkgver.tar.gz)
md5sums=('f9d145d5c09de9f0984ffe9bd1229970')

build()
{
  cd $srcdir/$pkgname-$pkgver
  sed -i -e 's/lib64/lib/g' x86_64.ld || return 1
  ./configure --prefix=/usr --target-list=arm-linux-user --static
  make || return 1
  mkdir -p $pkgdir/usr/bin || return 1
  install -m 755 arm-linux-user/qemu-arm $pkgdir/usr/bin/qemu-static-arm || return 1
}
